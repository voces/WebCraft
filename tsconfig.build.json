{
	"compilerOptions": {
		"outDir": "public/js",
		"baseUrl": "src",
		"allowJs": true,
		"target": "ES2020",
		"lib": [ "es2019", "es2020", "DOM" ],
		"moduleResolution": "node",
		"module": "ESNext",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"paths": { "*": [
			"../node_modules/*/src/index",
			"../node_modules/*/lib/index",
			"../node_modules/*/index",
			"../node_modules/*/dist/index"
		] },
		"esModuleInterop": true,
		"types": [],
		"declaration": true
	},
	"include": ["src"],
	"exclude": [
		"node_modules",
		"src/**/*.test.ts",
		"src/test"
	]
}